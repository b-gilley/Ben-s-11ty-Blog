<p>
  <u>Contact Us</u>
</p>

<form name="contact" netlify>
  <div class="form-row">
    <div class="col">
      <input type="text" id="nameFirst" class="form-control" name="nameFirst" placeholder="First Name" required>
    </div>
    <div class="col">
      <input type="text" id="nameLast" class="form-control" name="nameLast" placeholder="Last Name" required>
    </div>
  </div>
  
  <div class="form-group">
    <label for="email">Email:<input type="email" id="email" class="form-control" name="email"  placeholder="Email" required></label>
  </div>
  <div class="form-group">
    <label for="message">Message:</label><br>
    <input type="text" id="message" class="form-control form-control-lg" name="message" placeholder="Type your message here..." required><br>
  </div>
  <p>
    <button type="submit">Send</button>
  </p>
</form>